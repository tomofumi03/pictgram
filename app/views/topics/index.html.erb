<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="topic-index-single">
          <h2 class="topic-author">
            <%= topic.user.name %>
          </h2>
          <%= image_tag topic.image.url %>
          <% if !topic.favorite_users.include?(current_user) %>
          <%= link_to favorites_path(topic_id: topic.id), method: :post do %>
          <i class="far fa-heart like-btn" ></i>
          <% end %>
          <% else %>
          <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
          <i class="fas fa-heart unlike-btn"></i>
          <% end %>
          <%= topic.favorite_users.count %>
          <% end %>
          <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
          <p class="topic-text">
            <%= topic.description %>
          </p>
        </div>
      </div>
      <div class="comment-wrapper border-top　mb-10">
        <p class="mt-5">コメント</p>
        <% @comments.each do |comment| %>
        <div>
          <% unless c.user.blank? %>
          <a href="<%= user_path(c.user_id) %>"><%= image_tag c.user.image.to_s, class:"rounded-circle icon_image mr-3 mb-3"%></a>
          <% end %>
          <%= c.user.username unless c.user.blank? %>
          <br />
          <%= c.content %>
        </div>
        <br />
        <% end %>
        <% if user_signed_in? %>
        <%= form_with(model: [@topics, @comments], local: true) do |f| %>
        <%= f.text_area :content, class: "form-control", rows: 5 %>
        <%= button_tag type: "submit", class: "btn btn-success float-right mt-1" do %>
        <i class="far fa-comments"></i>
        <% end %>
        <% end %>
        <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>
